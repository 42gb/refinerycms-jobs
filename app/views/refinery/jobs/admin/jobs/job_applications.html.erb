<div id='actions'>
  <ul>
    <li>
      <%= link_to "Back to Jobs", refinery.jobs_admin_jobs_path, :class => "back_icon" %>
    </li>
  </ul>
</div>
<div id='records'>
  <% if searching? %>
    <h2>Search Results for "<%= params[:search] %>"</h2>

    <% if @jobs.any? %>
      <%= render :partial => "job_applications", :collection => @job_applications %>
    <% else %>
      <p>Sorry, no results found.</p>
    <% end %>
  <% else %>
    <h2>Job Applications for position: <%= @job.title %></h2>

    <% if @job_applications.any? %>
      <%= will_paginate @job_applications, :previous_label => '&laquo;', :next_label => '&raquo;' %>
      <ul id='sortable_list'>
        <%= render :partial => 'job_application', :collection => @job_applications %>
      </ul>
      <%= will_paginate @job_applications, :previous_label => '&laquo;', :next_label => '&raquo;' %>
    <% else %>
      <p>
        <strong>
          There are no job applications yet.
        </strong>
      </p>
    <% end %>
  <% end %>
</div>